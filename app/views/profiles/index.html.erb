<h1>My profile page</h1>

<div class="container-fluid">
  <div class="tabs">
    <a class="tab" data-toggle="tab" href="#Tours">
      <p>My tours</p>
    </a>
    <a class="tab" data-toggle="tab" href="#Bookings">
      <p>My bookings</p>
    </a>
  </div>

  <div class="tab-content tab-padding">
    <div class="tab-pane fade in active" id="Tours">
      <h4><strong>My tours</strong></h4>
      <% @my_tours.each do |tour| %>
        <p><strong><%= link_to tour.title, tour_path(tour) %></strong> | <%= tour.location %> | $<%= tour.price %></p>
        <p><%= link_to "Edit", edit_tour_path(tour) %></p>
        <p><%= link_to "Delete", tour_path(tour), method: :delete %></p>
        <p><small><%= tour.date %></small></p>
        <!-- <p><small><%#= tour.description %></small></p> -->
        <%= cl_image_tag tour.photo, height: 150, width: 200, crop: :fill %>
      <% end %>
        <%#= link_to 'Delete tour', tour_path(@tour), method: :delete #TODO: Create an alert that tells your that 'tour_name' has been deleted %>
        <%#= link_to 'Edit tour', tour_path(@tour), method: :delete #TODO: Create an alert that tells your that 'tour_name' has been deleted %>
    </div>

    <div class="tab-pane fade" id="Bookings">
      <h4><strong>My bookings</strong></h4>
        <% @my_bookings.each do |booking| %>
          <% tour = booking.tour %>
          <p><%= link_to "Delete", booking_path(booking), method: :delete %></p>
          <p><strong><%= link_to tour.title, tour_path(tour) %></strong> | Guests booked: <%= booking.guests %></p>
          <p><small><%= tour.location %></small></p>
          <%= cl_image_tag tour.photo, height: 150, width: 200, crop: :fill %>
          <p>Update the number of guests?</p>
          <%= simple_form_for booking do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
            <div class="form-inputs">
              <%= f.select :guests, options_for_select(1..10) %>
            </div>
            <div class="form-actions">
              <%= f.button :submit %>
            </div>
          <% end %>
        <% end %>
    </div>

  </div>
</div>






