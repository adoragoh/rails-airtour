
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(212,165,154,0.2) 0%, rgba(192,88,76,0.2) 50%), url('http://i64.tinypic.com/4jb2bc.jpg');">
  <div class="banner-content">
    <h1><%= @tour.title %></h1>
  </div>
</div>


<div class="container-fluid">

  <div class="tabs">
    <a class="tab" data-toggle="tab" href="#Description">
      <p>Description</p>
    </a>
    <a class="tab" data-toggle="tab" href="#Location">
      <p>Location</p>
    </a>
    <a class="tab" data-toggle="tab" href="#Date">
      <p>Date</p>
    </a>
    <a class="tab" data-toggle="tab" href="#Booking">
      <p>Booking</p>
    </a>
  </div>


  <div class="tab-content tab-padding">
    <div class="tab-pane fade " id="Description">
      <p><%= @tour.description %></p>
    </div>
    <div class="tab-pane fade in active" id="Location">

      <div class="inner-description">

      <p>
        <%= @tour.description %>
        <%#= link_to 'Delete tour', tour_path(@tour), method: :delete #TODO: Create an alert that tells your that 'tour_name' has been deleted %>
        <%#= link_to 'Edit tour', tour_path(@tour), method: :delete #TODO: Create an alert that tells your that 'tour_name' has been deleted %>
        </p>
      <div class="image-uploaded">
      <%= cl_image_tag @tour.photo, height: 300, width: 400, crop: :fill %>
      </div>

      </div>


      <div
        id="map"
        style="width: 100%;
        height: 600px;"
        data-markers="<%= @marker.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>



    </div>
    <div class="tab-pane fade" id="Date">
      <p>PLACEHOLDER</p>
    </div>
    <div class="tab-pane fade" id="Booking">

      <% if @booked %>
        <h4>You've already booked this tour with <%= @booking.guests %> guests.</h4>
          <p>Update the number of guests?</p>
          <%= simple_form_for @booking do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

            <div class="form-inputs">
              <%= f.select :guests, options_for_select(1..10) %>
            </div>

            <div class="form-actions">
              <%= f.button :submit %>
            </div>
          <% end %>
        <% else %>
          <p>No. of guests:</p>
          <%= simple_form_for [@tour, @booking] do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

            <div class="form-inputs">
              <%= f.select :guests, options_for_select(1..10) %>
            </div>

            <div class="form-actions">
              <%= f.button :submit %>
            </div>
          <% end %>
        <% end %>
    </div>
  </div>

</div>
