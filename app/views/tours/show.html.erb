


<div class="banner banner-background" style="background-image: linear-gradient(-225deg, rgba(212,165,154,0.2) 0%, rgba(192,88,76,0.2) 50%), url(<%= cl_image_path @tour.photo, crop: :fill; %>)  ;">
  <div class="banner-content">
    <h1><%= @tour.title %></h1>
  </div>
</div>


<div class="container-fluid">

  <div class="tabs">
    <a class="tab" data-toggle="tab" href="#Location">
      <p>Details</p>
    </a>
    <a class="tab" data-toggle="tab" href="#Booking">
      <p>Booking</p>
    </a>
  </div>


  <div class="tab-content tab-padding">
    <div class="tab-pane fade " id="Description">
      <p><%= @tour.description %></p>
    </div>
    <div class="tab-pane fade in active" id="Location">

      <div class="inner-description">

      <p><%= @tour.description %></p>
      <div class="image-uploaded">
        <p>PLACEHOLDER</p>
      </div>

      </div>


      <div
        id="map"
        style="width: 100%;
        height: 600px;"
        data-markers="<%= @marker.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>



    </div>
    <div class="tab-pane fade" id="Date">
      <p>PLACEHOLDER</p>
    </div>
    <div class="tab-pane fade" id="Booking">
      <p>No. of guests:</p>
      <%= simple_form_for [@tour, @booking] do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.select :guests, options_for_select(1..10) %>
        </div>

        <div class="form-actions">
          <%= f.button :submit %>
        </div>

      <% end %>

    </div>
  </div>

</div>
